{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "prod",
      "name": "Production",
      "region": "us-east-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "mgmt-ui",
          "name": "Management UI",
          "type": "static",
          "domain": "app.enrolla.io",
          "buildCommand": "npx nx build mgmt-ui --prod",
          "buildType": "nodejs",
          "outputDirectory": "dist/apps/mgmt-ui",
          "singlePageApp": true,
          "envVariables": {
            "VITE_BACKEND_URL": "https://api.enrolla.io",
            "VITE_PROPELAUTH_URL": "https://auth.enrolla.io"
          }
        }
      ]
    }
  ]
}
